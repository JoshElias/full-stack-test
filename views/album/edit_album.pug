doctype html
html(lang='en')
  include ../common/head.pug
  +head("Edit Album")
  body
    header
      include ../common/navbar.pug
      +navbar(user)
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1 Edit Album
            if (errors && errors.length)
              p.large.text-danger #{errors}
            form(action="/"+album.id+"/edit", method="POST")
              include ../common/albumForm.pug
              - var title = album.title
              - var genre = album.genre
              - var date = new Date(album.releaseDate)
              - var submit = 'Update'
              +albumForm(title, genre, date, submit)
    include ../common/footer.pug
    +footer()
