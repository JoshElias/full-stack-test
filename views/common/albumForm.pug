mixin albumForm(title, genre, date, submit)
  .formgroup
    input(name="album_title", type="text", placeholder="Enter title", value=`${title}`).mb-3.form-control
    input(name="album_genre", type="text", placeholder="Enter genre", value=`${genre}`).mb-3.form-control
    - var yyyy = date.getUTCFullYear()
    - var mm = date.getUTCMonth()<9? '0'+(date.getUTCMonth()+1): (date.getUTCMonth()+1)
    - var dd = date.getUTCDate()<10? '0'+date.getUTCDate(): date.getUTCDate()
    input(name="album_releaseDate", type="date", placeholder="Enter release date", value=`${yyyy}-${mm}-${dd}`).mb-3.form-control
    button(type="submit").btn.btn-primary #{submit}