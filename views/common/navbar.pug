mixin navbar(user)
  nav.navbar.navbar-expand.navbar-light.bg-light.topNav
    a(href="/", aria-label="QLongs Logo").navbar-brand.mr-0.mr-md-2
      img(src="/img/logo.svg", width="36", height="36")
    .collapse.navbar-collapse
      ul.navbar-nav.mr-auto
        li.nav-item
          a.nav-link(href="/") Home
    .navbar-right
      if user
        span.navbar-text User: #{user.email}
    .navbar-right
      ul.navbar-nav.mr-auto
        if !user
          li.nav-item
            a.nav-link(href="/signup") Sign up
          li.nav-item
            a.nav-link(href="/login") Login
        else
          li.nav-item
            a.nav-link(href="/logout") Logout